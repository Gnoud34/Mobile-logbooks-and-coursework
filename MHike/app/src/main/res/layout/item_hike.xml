<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/bg_card_hike"
    android:padding="12dp">

    <!-- Tên + Độ khó -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:text="Tam Dao • Medium"
        android:textColor="#1B5E20"
        android:textStyle="bold"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Địa điểm + Ngày -->
    <TextView
        android:id="@+id/tvSub"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="Vinh Phuc • 15/11/2025"
        android:textColor="#4E4E4E"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEdit"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Nút Edit -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="sans-serif-medium"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nút Delete (X tròn đỏ) -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_delete_circle"
        android:src="@drawable/ic_close_white_24dp"
        android:contentDescription="Delete"
        android:padding="8dp"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Observation - hàng riêng phía dưới -->
    <Button
        android:id="@+id/btnObservation"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-medium"
        android:text="Observe"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSub" />

</androidx.constraintlayout.widget.ConstraintLayout>
