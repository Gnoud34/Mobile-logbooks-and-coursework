<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:text="Record Observation"
        android:textColor="#1B5E20"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#C8E6C9"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <Spinner
        android:id="@+id/spHike"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

    <EditText
        android:id="@+id/etObs"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Observation *"
        android:textColorHint="#81C784"
        android:backgroundTint="#4CAF50"
        android:textColor="#1B5E20"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spHike" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Comment (Optional)"
        android:textColorHint="#A5D6A7"
        android:backgroundTint="#66BB6A"
        android:textColor="#1B5E20"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etObs" />

    <Button
        android:id="@+id/btnSaveObs"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:text="Save Observation"
        android:backgroundTint="#4CAF50"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etComment" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvObs"
        android:layout_width="342dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:background="#F1F8E9"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSaveObs"
        app:layout_constraintVertical_bias="0.52" />

</androidx.constraintlayout.widget.ConstraintLayout>