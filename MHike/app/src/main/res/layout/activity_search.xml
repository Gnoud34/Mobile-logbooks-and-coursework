<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:text="Search Hike"
        android:textColor="#1B5E20"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#C8E6C9"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- EditText (keyword) -->
    <EditText
        android:id="@+id/etKeyword"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:hint="Name contains..."
        android:backgroundTint="#4CAF50"
        android:textColor="#1B5E20"
        android:textColorHint="#81C784"
        android:paddingStart="12dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button -->
    <Button
        android:id="@+id/btnSearchGo"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:text="Search your hike"
        android:backgroundTint="#4CAF50"
        android:textColorHint="#81C784"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintTop_toBottomOf="@+id/etKeyword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearch"
        android:layout_width="342dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:background="#F1F8E9"
        android:padding="8dp"
        android:elevation="4dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchGo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
