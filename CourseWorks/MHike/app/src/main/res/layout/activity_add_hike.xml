<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:padding="20dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tvPageName"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:text="Travel Hike Information"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="#2E7D32"
        android:background="#C8E6C9"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="text"
        android:backgroundTint="#4CAF50"
        android:hint="Enter hike name"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPageName" />

    <TextView
        android:id="@+id/tName"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Hike name: *"
        android:textSize="18dp"
        android:textColor="#1B5E20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPageName" />

    <EditText
        android:id="@+id/etLength"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#4CAF50"
        android:ems="10"
        android:hint="Enter length (eg.2km)"
        android:inputType="text"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDate" />

    <TextView
        android:id="@+id/tTerrain"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Terrain:"
        android:textSize="18dp"
        android:textColor="#1B5E20"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgParking" />

    <EditText
        android:id="@+id/etWeather"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="text"
        android:backgroundTint="#4CAF50"
        android:hint="Enter weather status"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTerrain" />

    <TextView
        android:id="@+id/tDescription"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Description:"
        android:textSize="18dp"
        android:textColor="#1B5E20"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tWeather" />

    <TextView
        android:id="@+id/tDate"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Date: *"
        android:textSize="18dp"
        android:textColor="#1B5E20"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tLocation" />

    <EditText
        android:id="@+id/etTerrain"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="text"
        android:backgroundTint="#4CAF50"
        android:hint="Enter terrain"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgParking" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="text"
        android:backgroundTint="#4CAF50"
        android:hint="Enter location"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <Spinner
        android:id="@+id/spDifficulty"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#4CAF50"
        android:textColorHint="#81C784"
        app:layout_constraintTop_toBottomOf="@+id/etLength" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:text="Save"
        android:backgroundTint="#4CAF50"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescription" />

    <TextView
        android:id="@+id/tLevel"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Level:"
        android:textSize="18dp"
        android:textColor="#1B5E20"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tLength" />

    <RadioGroup
        android:id="@+id/rgParking"
        android:layout_width="342dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spDifficulty">

        <RadioButton
            android:id="@+id/rbYes"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:text="Parking: Yes" />

        <RadioButton
            android:id="@+id/rbNo"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:text="Parking: No" />

    </RadioGroup>

    <TextView
        android:id="@+id/tWeather"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Weather:"
        android:textSize="18dp"
        android:textColor="#1B5E20"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tTerrain" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#4CAF50"
        android:ems="10"
        android:hint="Enter description"
        android:inputType="text"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etWeather" />

    <TextView
        android:id="@+id/tLength"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Length: *"
        android:textSize="18dp"
        android:textColor="#1B5E20"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDate" />

    <TextView
        android:id="@+id/tLocation"
        android:layout_width="115dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Location: *"
        android:textSize="18dp"
        android:textColor="#1B5E20"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tName" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="text"
        android:backgroundTint="#4CAF50"
        android:textColorHint="#81C784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLocation" />



</androidx.constraintlayout.widget.ConstraintLayout>