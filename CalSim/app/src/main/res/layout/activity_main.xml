<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="13dp"
        android:text="CalSim"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tvResult"
        app:layout_constraintStart_toStartOf="@+id/tvResult"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="272dp"
        android:layout_height="97dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:height="100dp"
        android:background="#ECE6DB"
        android:gravity="center_vertical|end"
        android:text="0"
        android:textColor="#000000"
        android:textSize="36dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="290dp"
        android:layout_height="363dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="96dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:rowCount="5">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="133dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#E63946"
            android:text="C"
            android:textColor="@color/black"
            android:textColorLink="#E63946"
            app:cornerRadius="8dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="0"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#F4A261"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorLink="#F4A261"
            app:cornerRadius="8dp"
            app:layout_column="2"
            app:layout_row="0"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#F4A261"
            android:text="x"
            android:textColor="@color/black"
            android:textColorLink="#F4A261"
            app:cornerRadius="8dp"
            app:layout_column="3"
            app:layout_row="0"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="7"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="0"
            app:layout_row="1"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="8"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="1"
            app:layout_row="1"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="9"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="2"
            app:layout_row="1"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#F4A261"
            android:text="-"
            android:textColor="@color/black"
            android:textColorLink="#F4A261"
            app:cornerRadius="8dp"
            app:layout_column="3"
            app:layout_row="1"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="4"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="0"
            app:layout_row="2"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="5"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="1"
            app:layout_row="2"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="6"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="2"
            app:layout_row="2"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#F4A261"
            android:text=":"
            android:textColor="@color/black"
            android:textColorLink="#F4A261"
            app:cornerRadius="8dp"
            app:layout_column="3"
            app:layout_row="2"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:maxWidth="80dp"
            android:text="1"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="0"
            app:layout_row="3"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="2"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="1"
            app:layout_row="3"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="3"
            android:textColor="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="2"
            app:layout_row="3"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="60dp"
            android:layout_height="134dp"
            android:layout_margin="6dp"
            android:backgroundTint="#E76F51"
            android:text="="
            android:textColor="@color/black"
            android:textColorHint="#E76F51"
            android:textColorLink="#E76F51"
            app:cornerRadius="8dp"
            app:layout_column="3"
            app:layout_row="3"
            app:layout_rowSpan="2"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="133dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#EDEAE5"
            android:text="0"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="#EDEAE5"
            app:cornerRadius="8dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="4"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:backgroundTint="#F4A261"
            android:text="."
            app:cornerRadius="8dp"
            app:layout_column="2"
            app:layout_row="4"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_row="0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>